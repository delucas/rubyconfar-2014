- content_for(:body_class) {"inner-page"}



%section#speakers
  %header
    .top
    .stuff     
      .wrapper
        %a.register{:href=>"register.html"} Register now
        %span.full-list
          %i.fa.fa-angle-down
          Index
      %h1 Speakers
    .index
      %ol.wrapper
        - data.speakers.each do |speaker|
          %li{class: speaker.rfd ? 'rfd' : 'main' }            
            %a.share{href: "##{speaker.id}"}
              .border              
              %img{src: speaker.image , alt: speaker.name}
            .tooltip= speaker.name
  
  %article.wrapper
   
    %h1 Speakers
    %ul
      = partial("_speakers.haml", lang: 'en')
